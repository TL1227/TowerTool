<Window x:Class="TowerTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TowerTool"
        mc:Ignorable="d"
        Title="Tower Tool" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu>
            <MenuItem x:Name="FileMenu" Header="File">
                <MenuItem x:Name="Export" Click="Export_Click" />
            </MenuItem>
        </Menu>

        <local:MapGrid x:Name="MapGridControl"  Grid.Row="1"></local:MapGrid>
    </Grid>
</Window>
