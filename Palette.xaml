<UserControl x:Class="TowerTool.Palette"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TowerTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200"
             Background="DimGray"
             FontSize="12">
    <StackPanel Margin="10">
        <RadioButton Tag="#" Background="DarkSlateGray" Foreground="White" Click="RadioButton_Click" IsChecked="True">Wall</RadioButton>
        <RadioButton Tag="c" Background="Goldenrod" Foreground="White" Click="RadioButton_Click">Chest</RadioButton>
        <RadioButton Tag=" " Background="White" Foreground="White" Click="RadioButton_Click">Erase</RadioButton>
        <RadioButton Tag="s" Background="SteelBlue" Foreground="White" Click="RadioButton_Click">Player</RadioButton>
    </StackPanel>
</UserControl>
